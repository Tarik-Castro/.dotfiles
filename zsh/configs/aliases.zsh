###########
# ALIASES #
###########

alias cp="cp -iv"
alias rm="rm -iv"
alias la="ls -la"
alias ls="ls --color"
alias df="df -h"
alias du="du -cksh"
alias v="vim"
alias vs="vim ~/.vimrc"
alias sz="source ~/.zshrc"
alias zs="vim ~/.zshrc"

# Use modern regexps for sed, i.e, "(one|two)", not "\(one\|two\)"
alias sed="sed -E"

# Copy-pasting `$ python something.py` works
alias \$=''

alias dotfiles="cd ~/.dotfiles"

# Global aliases
alias -g G="| grep " 
